:80 {
    root * /var/www/public
    encode gzip
    file_server

    php_fastcgi app:9000

    @static {
        file
        path *.ico *.css *.js *.gif *.jpg *.jpeg *.png *.svg *.woff *.woff2 *.ttf *.eot
    }
    header @static Cache-Control max-age=31536000

    log {
        output file /var/log/caddy/access.log
    }
}
